<div class="card">
  <h2 class="card-header">New Post</h2>

  {{! FORM }}
  <form class="card-body" id="new-post-form">
    <input type="hidden" name="post-id" value="{{post.id}}" />
    <div>
      <label class="form-label">Title:</label>
      <input class="form-input" type="text" name="post-title" />
    </div>
    <div>
      <label class="form-label">Post content:</label>
      <textarea
        class="form-textarea form-input"
        name="post-body"
        data-number="8"
      ></textarea>
    </div>
    <button class="btn btn-primary">POST YOUR POST</button>
  </form>

</div>
<script src="/js/new.js"></script>